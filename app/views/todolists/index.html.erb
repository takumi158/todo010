<body>

<h1>TODOリスト一覧</h1>

<br>

<CENTER>

<table>
  <thead>
    <tr>
      <th>登録日</th>
      <th>TODO</th>
      <th>メモ</th>
      <th>〆切</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todolists.each do |todolist| %>
      <tr>
        <td><%= todolist.today %></td>
        <td><%= todolist.todo %></td>
        <td><%= todolist.memo %></td>
        <td><%= todolist.deadline %></td>
        <td><%= link_to '詳細', todolist %></td>
        <td><%= link_to '編集', edit_todolist_path(todolist) %></td>
        <td><%= link_to '削除', todolist, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</CENTER>

<br>

<%= link_to 'HOME', top_index_path %> |
<%= link_to '新規作成', new_todolist_path %>

